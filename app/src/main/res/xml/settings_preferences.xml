<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

        <ListPreference
            android:title="Active profile"
            android:key="profileList"
            android:defaultValue="profile_1"
            android:entries="@array/profile_list"
            android:entryValues="@array/profile_list"
            >
        </ListPreference>

        <PreferenceCategory
            android:title="Time settings">
                <EditTextPreference
                    android:title="Training time"
                    android:key="trainingTime"
                    android:defaultValue="2:00"
                >
                </EditTextPreference>

                <EditTextPreference
                    android:title="Rest time"
                    android:key="restTime"
                    android:defaultValue="0:10"
                    >
                </EditTextPreference>

                <EditTextPreference
                    android:title="Preparation time"
                    android:key="preparationTime"
                    android:defaultValue="0:10"
                    >
                </EditTextPreference>

        </PreferenceCategory>

        <PreferenceCategory
                android:title="Timer alerts">

                <EditTextPreference
                    android:title="Alert of end preparation"
                    android:key="preparationAlert"
                    android:defaultValue="0:10"
                    >
                </EditTextPreference>

                <EditTextPreference
                    android:title="Alert of end rest"
                    android:key="restAlent"
                    android:defaultValue="0:10"
                    >
                </EditTextPreference>

                <EditTextPreference
                    android:title="Alert of end round"
                    android:key="roundAlert"
                    android:defaultValue="0:10"
                    >
                </EditTextPreference>

        </PreferenceCategory>

        <PreferenceCategory
            android:title="Round settings">
                <EditTextPreference
                    android:title="Rounds number"
                    android:key="roundsNumber"
                    android:defaultValue="2"
                    >
                </EditTextPreference>
        </PreferenceCategory>

</PreferenceScreen>